<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"

    tools:context="com.example.saken.vst.QuestBus">

    <TextView
        android:id="@+id/bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In this quest you will learn how to move in the city"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"  />


    <TextView
        android:id="@+id/retrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ssssss"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="false"  />

    <Button
        android:id="@+id/buttonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am done bussing"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"

        />

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to next quest"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonClick"
        />
    <Button
        android:id="@+id/buttonLast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 last"
        android:layout_toRightOf="@+id/buttonNext"
        />

    <Button
        android:id="@+id/buttonLast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonLast1"
        />
    <Button
        android:id="@+id/buttonLast3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonLast2"
        />
    <Button
        android:id="@+id/buttonLast4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonLast3"
        />
</RelativeLayout>