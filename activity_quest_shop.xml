<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saken.vst.QuestShop">

    <TextView
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In this quest you will learn different places of shopping blah blah"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"  />

    <Button
        android:id="@+id/buttonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am done shopping"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to next quest"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/buttonClick"
        />
    <Button
        android:id="@+id/buttonLast5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonNext"
        />

    <Button
        android:id="@+id/buttonLast6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonLast1"
        />
    <Button
        android:id="@+id/buttonLast7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonLast2"
        />
    <Button
        android:id="@+id/buttonLast8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_toRightOf="@+id/buttonLast3"
        />
</RelativeLayout>